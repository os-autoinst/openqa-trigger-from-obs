<openQA
    project_pattern="devel:LEO"
	dist_path="obspublish-other::openqa/devel:LEO/images/*"
    distri="alp"
	version="0.1"
    archs="x86_64">
	<batch name="base">
		<flavor name="SelfInstall" folder="ALP:SelfInstall">
			<hdd filemask="ALP.*-SelfInstall-Build.*install.iso$"/>
			<repos>
				<ALP folder="ALP-ftp-POOL"/>
			</repos>
		</flavor>
		<flavor name="SelfInstall_NonTransactional" folder="ALP:SelfInstall_NonTransactional">
			<hdd filemask="ALP.*-SelfInstall_NonTransactional-Build.*install\.iso$"/>
		</flavor>
	</batch>
	<batch name="other" repos="base">
		<flavor name="kvm-and-xen" folder="ALP:kvm-and-xen">
			<hdd filemask="ALP.*-kvm-and-xen-Build.*\.qcow2$"/>
		</flavor>
		<flavor name="kvm-and-xen_NonTransactional" folder="ALP:kvm-and-xen_NonTransactional">
			<hdd filemask="ALP.*-kvm-and-xen_NonTransactional-Build.*\.qcow2$"/>
		</flavor>
	</batch>
</openQA>
