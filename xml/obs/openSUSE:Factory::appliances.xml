<openQA
    project_pattern="openSUSE:(?P&lt;version&gt;Factory):ToTest::appliances"
    distri="opensuse">
    <batch name="jeos" folder="appliances/x86_64" archs="x86_64">
        <flavor name="JeOS-for-kvm-and-xen" folder="kiwi-templates-JeOS:kvm-and-xen">
            <hdd filemask=".*kvm-and-xen.*\.qcow2$"/>
            <repos archs="x86_64">
                <oss folder="openSUSE-ftp-ftp" gen="openSUSE-$build-i586-x86_64-Media1" debug="{java*,kernel-default-debug*,kernel-default-base-debug*,mraa-debug*}" source="{coreutils*,yast2-network*}" mirror="1" dest="openSUSE-Tumbleweed-oss-i586-x86_64"/>
                <non-oss folder="openSUSE-Addon-NonOss-ftp-ftp" gen="openSUSE-Addon-NonOss-FTP-i586-x86_64-Media1" dest="openSUSE-Tumbleweed-non-oss-i586-x86_64"/>
            </repos>
        </flavor>
    </batch>
    <batch name="microos" folder="appliances/x86_64" archs="x86_64" repos="jeos" distri="microos">
        <flavor name="MicroOS-Image-ContainerHost" folder="openSUSE-MicroOS:ContainerHost-kvm-and-xen">
            <hdd filemask=".*ContainerHost-kvm-and-xen.*\.qcow2$"/>
        </flavor>
        <flavor name="MicroOS-Image-Kubic-kubeadm" folder="openSUSE-MicroOS:Kubic-kubeadm-kvm-and-xen">
            <hdd filemask=".*Kubic-kubeadm-kvm-and-xen.*\.qcow2$"/>
        </flavor>
    </batch>
</openQA>
